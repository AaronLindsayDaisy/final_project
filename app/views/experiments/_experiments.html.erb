<h1 class="page-title">All Experiments</h1>

<% @experiments.each do |experiment| %>

<div class="index-wrapper">
    <div class="index-experiment-card">
        <div class="index-photo">
          <% if experiment.uploaded_file_file_name != nil %>
          <%= image_tag experiment.uploaded_file %>
          <% end %>
        </div>
        
        <i class="fa fa-thumbs-up index-likes"><br></i><%= pluralize experiment.votes, "like" %>
        
        <div class="index-info">
            <h3 class="index-exp-title"><a><%= link_to experiment.name, experiment %></a><br></h3>
              <div class="index-exp-ratings">
                  <div class="index-concept-icon">
                    <% experiment.concepts.each do |c| %>
                        <%= image_tag "#{c.name}.png", class: "concept-img-small" %><br>
                        <%= link_to c.name, concept_path(c) %><br>
                    <% end %>
                  </div>
                  
                  <div class="index-time">
                      <%= image_tag "time.png", class: "icon-small" %><br>
                      <%= experiment.complete_time %> hour(s)
                  </div>  
                  
                  <div class="index-age">
                      <%= image_tag "age.png", class: "icon-small" %><br>
                      <%= experiment.return_age %> years 
                  </div> 
            
                <div class="mess-rate-disable index-mess">
                    <%= rating_for experiment, "name", star_path: '/images/ratyrate', :disable_rate => true %><br>    
                    Mess
                </div>
              </div> 
         </div>     
    </div>
</div>    
<% end %>
