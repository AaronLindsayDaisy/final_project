

<h1 class="page-title">All Experiments</h1>

<% @experiments.each do |experiment| %>

<div class="experiment-card">
    <div class="info-half">
      <% experiment.concepts.map do |c| %>
          <%= image_tag "#{c.name}.png", class: "concept-img" %><br>
          <div class="concept-title"><%= link_to c.name, concept_path(c) %></div><br>
      <% end %>
        
      <h3 class="exp-title"><a><%= link_to experiment.name, experiment %></a><br></h3>
    </div>
    <div class="photo-half" 
      <div class="index-photo">
          <% if experiment.uploaded_file_file_name != nil %>
            <%= image_tag experiment.uploaded_file %>
          <% end %>
      </div> 
       
      <div class="exp-ratings">
        <i class="fa fa-thumbs-up"></i><%= pluralize experiment.votes, "like" %><br>
           
        <%= image_tag "age.png", class: "icon-small" %>
        <%= experiment.age %> years <br>

        <%= image_tag "time.png", class: "icon-small" %>
        <%= experiment.complete_time %> hour(s) <br>
        
        <div class="mess-rate-disable">
        Mess: <%= rating_for experiment, "name", star_path: '/images/ratyrate', :disable_rate => true %>
        </div> 
      </div>
    </div>
</div>
<% end %>
