<%= form_for(@experiment) do |f| %>
  <% if @experiment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@experiment.errors.count, "error") %> prohibited this experiment from being saved:</h2>

      <ul>
      <% @experiment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :lesson %><br>
    <%= f.text_area :lesson %>
  </div>
  <div class="field">
    <%= f.label :youtube_link %><br>
    <%= f.text_area :youtube_link %>
  </div>
  <div class="field">
    <%= f.label :complete_time %><br>
    <%= f.number_field(:complete_time, in: 1.0..20.0, step: 0.5) %> hours
  </div>

  <h3>Materials</h3>
  <ul class="materials-list"> 
    <%= f.fields_for(:materials) do |ff| %>
      <li>
        <div class="field material">
          <%= ff.label :piece %><br>
          <%= ff.text_field :piece, :class=> "new-material" %>
        </div>
      </li>  
      <button type="button" class="add-material-btn">+</button>
    <% end %>
  </ul>  

  <h3>Instructions</h3>
  <ul class="instructions-list">
    <%= f.fields_for(:instructions) do |ff| %>
      <div class="field instructions">
        <%= ff.label :information %><br>
        <%= ff.text_field :information, :class=> "new-instruction" %>
      </div>
      <div class="field">
        <%= ff.label :order %><br>
        <%= ff.number_field :order %>
      </div>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
