<script>
$(function() {

  $('.concept').tooltip({

    items: "div",
    content: function() {
      return $(this).children('.experiments').html();
    },
    close: function(event, ui){
            ui.tooltip.hover(
                function () {
                    $(this).stop(true).fadeTo(400, 1);
                },
                function () {
                    $(this).fadeOut("400", function(){
                        $(this).remove();
                    })
                }
            );
        }
  });
});
</script>
